# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# PRIVATE
# init DB
GET /init							  		       	controllers.Application.init()

# login
GET /private							  		   	controllers.Application.showLogin()
POST /private/login						  		   	controllers.Application.login()

# main menu
GET /private/mainMenu					  		   	controllers.Application.mainMenu()

# producs
GET     /private/products                          	controllers.Product.listAllProducts()
GET     /private/products/:id                      	controllers.Product.showOneProduct(id : Int)

#category
GET     /private/categories                        	controllers.Category.listAllCategories()
GET     /private/categories/:id                    	controllers.Category.showOneCategory(id : Int)

#user
GET     /private/users                        	   	controllers.User.listAllUsers()
GET     /private/users/:id                         	controllers.User.showOneUser(id : Int)

#order
GET     /private/orders                        	   	controllers.Order.listAllOrders()
GET     /private/orders/:id                        	controllers.Order.showOneOrder(id : Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               				controllers.Assets.at(path="/public", file)

GET 	/*a											controllers.Application.show404(a)
