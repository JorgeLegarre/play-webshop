# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# PRIVATE
# login
GET 	/private						  		   	controllers.ApplicationController.showLogin()
GET 	/private/						  		   	controllers.ApplicationController.showLogin()
POST 	/private/login					  		   	controllers.ApplicationController.login()
GET 	/private/logout					  		   	controllers.ApplicationController.logOut()

# main menu
GET 	/private/mainMenu					  	   	controllers.ApplicationController.mainMenu()

# producs
GET     /private/products                          	controllers.ProductController.listAllProducts()
GET     /private/products/                         	controllers.ProductController.listAllProducts()

GET     /private/products/add            			controllers.ProductController.showAddProduct()

GET     /private/products/:id            			controllers.ProductController.showOneProduct(id : Int)

GET     /private/products/:id/edit            		controllers.ProductController.showEditProduct(id : Int)

POST    /private/products/delete           			controllers.ProductController.deleteProduct()

POST	/private/products/save						controllers.ProductController.saveProduct()

#category
GET     /private/categories                        	controllers.CategoryController.listAllCategories()
GET     /private/categories/                       	controllers.CategoryController.listAllCategories()
GET     /private/categories/:id                    	controllers.CategoryController.showOneCategory(id : Int)

#user
GET     /private/users                        	   	controllers.UserController.listAllUsers()
GET     /private/users/                        	   	controllers.UserController.listAllUsers()
GET     /private/users/currentUser                  controllers.UserController.showCurrentUser()
GET     /private/users/:id                         	controllers.UserController.showOneUser(id : Int)


#order
GET     /private/orders                        	   	controllers.OrderController.listAllOrders()
GET     /private/orders/                       	   	controllers.OrderController.listAllOrders()
GET     /private/orders/:id                        	controllers.OrderController.showOneOrder(id : Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               				controllers.Assets.at(path="/public", file)

GET 	/*a											controllers.ApplicationController.show404(a)
