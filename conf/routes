# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET		/init								controllers.Application.init()

# producs
GET     /products                          controllers.Product.listAllProducts()
GET     /products/                         controllers.Product.listAllProducts()
GET     /products/:id                      controllers.Product.showOneProduct(id : Int)

#category
GET     /categories                        controllers.Category.listAllCategories()
GET     /categories/                       controllers.Category.listAllCategories()
GET     /categories/:id                    controllers.Category.showOneCategory(id : Int)

#user
GET     /users                        	   controllers.User.listAllUsers()
GET     /users/                            controllers.User.listAllUsers()
GET     /users/:id                         controllers.User.showOneUser(id : Int)

#order
GET     /orders                        	   controllers.Order.listAllOrders()
GET     /orders/                            controllers.Order.listAllOrders()
GET     /orders/:id                         controllers.Order.showOneOrder(id : Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET 	/*a								controllers.Application.show404(a)
